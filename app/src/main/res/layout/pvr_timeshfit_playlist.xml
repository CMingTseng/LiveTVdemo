<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/pvr_file_info"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/dvr_record_bg_color"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:orientation="vertical"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/playlist_filename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/nav_channel_title_padding_top"
            android:text="@string/pvr_playlist_record_detail"
            android:textColor="@color/white"
            android:textSize="@dimen/nav_channel_list_textsize_large"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/playlist_filemeta"
            style="@style/pvr_tshift_textsize_20"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/playlist_filename"
            android:layout_marginEnd="90dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dip"
            android:orientation="vertical"
            android:textColor="@color/white" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/pvr_playlist_channel_num"
                    android:textAppearance="@style/nav_pvr_filelist_text" />

                <TextView
                    android:id="@+id/pvr_channel_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36sp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textAppearance="@style/nav_pvr_filelist_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/pvr_playlist_channel_name"
                    android:textAppearance="@style/nav_pvr_filelist_text" />

                <TextView
                    android:id="@+id/pvr_channel_str"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36sp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:maxLines="2"
                    android:textAppearance="@style/nav_pvr_filelist_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/pvr_playlist_program_name"
                    android:textAppearance="@style/nav_pvr_filelist_text" />

                <TextView
                    android:id="@+id/pvr_programename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36sp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:maxLines="2"
                    android:textAppearance="@style/nav_pvr_filelist_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/pvr_playlist_date"
                    android:textAppearance="@style/nav_pvr_filelist_text" />

                <TextView
                    android:id="@+id/pvr_channel_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36sp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textAppearance="@style/nav_pvr_filelist_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/pvr_playlist_week"
                    android:textAppearance="@style/nav_pvr_filelist_text" />

                <TextView
                    android:id="@+id/pvr_week"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36sp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textAppearance="@style/nav_pvr_filelist_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/pvr_playlist_time"
                    android:textAppearance="@style/nav_pvr_filelist_text" />

                <TextView
                    android:id="@+id/pvr_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36sp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textAppearance="@style/nav_pvr_filelist_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/pvr_playlist_duration"
                    android:textAppearance="@style/nav_pvr_filelist_text" />

                <TextView
                    android:id="@+id/pvr_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36sp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textAppearance="@style/nav_pvr_filelist_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/pvr_playlist_programe_info"
                    android:textAppearance="@style/nav_pvr_filelist_text" />

                <TextView
                    android:id="@+id/pvr_programe_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36sp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:maxLines="3"
                    android:singleLine="false"
                    android:textAppearance="@style/nav_pvr_filelist_text" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.7"
        android:background="@color/nav_ch_list_view_back"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/playlist_title"
            style="@style/pvr_tshift_textsize_23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/nav_ch_list_title_back"
            android:paddingBottom="20dp"
            android:paddingStart="@dimen/nav_channel_title_padding"
            android:paddingTop="@dimen/nav_channel_title_padding_top"
            android:text="@string/pvr_playlist_record_list"
            android:textColor="@color/nav_channel_list_txt"
            android:textSize="@dimen/nav_channel_list_textsize_large"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/playlist_hint"
            style="@style/pvr_tshift_textsize_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:orientation="vertical"
            android:padding="2dip"
            android:visibility="gone"
            android:textColor="@color/white" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    >

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:padding="6dip"
                        android:src="@drawable/tk_cm_color_key_red" />

                    <TextView
                        android:id="@+id/playlist_page_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:padding="2dip"
                        android:text="@string/pvr_playlist_page_up"
                        android:textAppearance="@style/nav_pvr_filelist_text"
                        android:textColor="@color/nav_channel_list_color_txt"
                        android:textSize="@dimen/nav_channel_list_textsize_timeduration" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:padding="6dip"
                        android:src="@drawable/tk_cm_color_key_yellow" />

                    <TextView
                        android:id="@+id/playlist_delet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:padding="2dip"
                        android:text="@string/pager_mid"
                        android:textAppearance="@style/nav_pvr_filelist_text"
                        android:textColor="@color/nav_channel_list_color_txt"
                        android:textSize="@dimen/nav_channel_list_textsize_timeduration" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start" >

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:padding="6dip"
                        android:src="@drawable/tk_cm_color_key_green" />

                    <TextView
                        android:id="@+id/playlist_page_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:padding="2dip"
                        android:text="@string/pvr_playlist_page_down"
                        android:textAppearance="@style/nav_pvr_filelist_text"
                        android:textColor="@color/nav_channel_list_color_txt"
                        android:textSize="@dimen/nav_channel_list_textsize_timeduration" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:gravity="start" >

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:padding="6dip"
                        android:src="@drawable/tk_cm_color_key_blue" />

                    <TextView
                        android:id="@+id/playlist_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:padding="2dip"
                        android:text="@string/pvr_playlist_info"
                        android:textAppearance="@style/nav_pvr_filelist_text"
                        android:textColor="@color/nav_channel_list_color_txt"
                        android:textSize="@dimen/nav_channel_list_textsize_timeduration" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/playlist_hint"
            android:layout_below="@+id/playlist_title"
            >
            <ProgressBar
                android:id="@+id/dvr_record_list_progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="60dp"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:background="@color/nav_ch_list_view_back" />
        <ListView
            android:id="@+id/playlist_list"
            style="@style/pvr_tshift_textsize_20"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:dividerHeight="0dip"
            android:gravity="center_horizontal"
            android:nextFocusDown="@+id/playlist_list"
            android:nextFocusUp="@+id/playlist_list"
            android:visibility="gone"
            android:scrollbars="none"
            android:textColor="@color/white" >
        </ListView>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>