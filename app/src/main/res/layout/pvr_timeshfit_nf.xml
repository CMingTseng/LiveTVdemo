<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/info_banner_background" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:gravity="center">

        <ImageView
            android:id="@+id/pvr_rec_icon_small"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:padding="@dimen/nav_source_list_divider_height"
            android:src="@drawable/dvr_record_icon"
            />

        <TextView
            android:layout_toEndOf="@id/pvr_rec_icon_small"
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/info_banner_background"
            android:minWidth="70dp"
            android:padding="@dimen/padding_medium"
            android:text="@string/pvr_nf_info"
            android:textColor="@color/white"
            android:textSize="@dimen/nav_textsize_normal" />

        <TextView
            android:id="@+id/pvr_fast_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dip"
            android:textSize="15sp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>