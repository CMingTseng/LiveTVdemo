<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/simple_dialog_layout"
    android:layout_width="460dp"
    android:layout_height="wrap_content"
    android:background="@drawable/nav_simple_dialog_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="28dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/simple_dialog_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/simple_dialog_warning_icon"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/simple_dialog_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Info"
            android:textColor="@color/white"
            android:textSize="19dp" >
        </TextView>
    </LinearLayout>
    <!-- android:text="@string/nav_oad_manual_download_confirm" -->

    <TextView
        android:id="@+id/simple_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical"
        android:maxLines="3"
        android:textColor="#eaeaea"
        android:textSize="14sp"
        android:lineSpacingExtra="5dp" >
    </TextView>

    <LinearLayout
        android:id="@+id/simple_bt_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginBottom="28dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <!-- android:text="Yes" -->

        <Button
            android:id="@+id/simple_dialog_cancel"
            android:layout_width="wrap_content"
            android:minWidth="82dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:layout_height="24dp"
            android:background="@drawable/simple_dialog_button"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:textColor="@color/simple_text_normal"
            android:textSize="14sp"
            android:visibility="gone" >
        </Button>
        <!-- android:text="No" -->

        <Button
            android:id="@+id/simple_dialog_confirm"
            android:layout_width="wrap_content"
            android:minWidth="82dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:layout_height="24dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/simple_dialog_button"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:textColor="@color/simple_text_normal"
            android:textSize="14sp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>