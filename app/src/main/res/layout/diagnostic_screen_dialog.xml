<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/nav_simple_dialog_bg"
    android:gravity="center">

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="28dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/simple_dialog_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/simple_dialog_warning_icon"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/simple_dialog_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Info"
            android:textColor="@color/white"
            android:textSize="19dp" >
        </TextView>
    </LinearLayout>

	<TextView 
	    android:id="@+id/diagnostic_screen_toast_message"
		android:layout_width="match_parent" 
		android:layout_height="wrap_content"
	    android:textSize="@dimen/content_scan_small_text_size"
		android:textColor="@color/white"
		android:gravity="center" />

	<Button
         android:id="@+id/diagnostic_screen_toast_message_btn_cancel"
         android:layout_width="@dimen/menu_button_width"
         android:layout_height="24dip"
         android:layout_marginTop="30dip"
         android:layout_marginRight="10dp"
         android:background="@drawable/simple_dialog_button"
         android:textColor="@color/white"
         android:textAllCaps="false"
         android:text="@string/menu_cancel"
         android:layout_gravity="right"
         android:textSize="@dimen/large_text_size" >
     </Button>

</LinearLayout>
