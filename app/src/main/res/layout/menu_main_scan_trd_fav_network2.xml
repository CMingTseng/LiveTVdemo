<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/scan_third_dialog_width"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="@drawable/nav_simple_dialog_bg">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/scan_fav_network_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/scan_trd_fav_network"
            android:textSize="19dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:gravity="center" >

        <ListView
            android:id="@+id/scan_fav_network_list"
            style="@style/setup_textView"
            android:dividerHeight="@dimen/nav_channel_list_padTop"
            android:listSelector="@drawable/nav_ch_list_selector"
            android:nextFocusLeft="@+id/scan_fav_network_list"
            android:nextFocusRight="@+id/scan_fav_network_list"
            android:nextFocusUp="@+id/scan_fav_network_list"
            android:nextFocusDown="@+id/scan_fav_network_list"
            android:nextFocusForward="@+id/scan_fav_network_list"
             >
        </ListView>
    </LinearLayout>

    <TextView
        android:id="@+id/italy_clarify_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/italy_clarify_text"
        android:textSize="12sp"
        android:fontFamily="sans-serif-condensed"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"/>

</LinearLayout>