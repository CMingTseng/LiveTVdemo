<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/banner_info_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="invisible"
    >
    <TextView
           android:layout_alignParentRight="true"
           android:layout_alignParentTop="true"
           android:layout_marginTop="@dimen/nav_source_list_item_margin_left"
           android:layout_marginRight="@dimen/nav_source_list_item_margin_left"
           android:id="@+id/simple_channel_number"
           android:layout_width="120dip"
           android:layout_height="80dip"
           android:gravity="center"
           android:textColor="@color/white"
           android:textSize="@dimen/uk_banner_current_programme_number_text_size"
           android:background="@color/uk_banner_background"
           />
     <LinearLayout
             android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dip"
            android:layout_marginRight="5dip"
            android:id="@+id/banner_simple_source_layout"
            android:layout_width="130dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="invisible"
            android:background="@color/uk_banner_background"
             >
            <!-- channel number or source name -->
            <TextView
                android:layout_marginTop="5dip"
                android:id="@+id/banner_simple_first_line"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/nav_textsize_normal"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:layout_weight="0.40"/>
            <!-- second line of simple banner -->
            <RelativeLayout
                android:id="@+id/banner_simple_second_line_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_weight="0.35" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/banner_dts_type_simple"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/nav_textsize_normal"
                        android:visibility="gone"/>
                    <ImageView
                        android:id="@+id/banner_dolby_type_simple"
                        android:layout_width="wrap_content"
                        android:scaleType="fitCenter"
                        android:layout_height="@dimen/nav_banner_hdmi_dobly_height"/>
                    <ImageView
                        android:id="@+id/banner_dolby_vision_simple"
                        android:layout_width="wrap_content"
                        android:scaleType="fitCenter"
                        android:layout_height="@dimen/nav_banner_hdmi_dobly_height"
                        android:layout_marginTop="@dimen/nav_dp2"/>
                </LinearLayout>
                <!-- channel name -->
                <TextView
                    android:id="@+id/banner_simple_channel_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/nav_channel_list_padTop"
                    android:layout_marginTop="@dimen/nav_channel_list_padTop"
                    android:gravity="center"
                    android:scrollHorizontally="true"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:textColor="@color/white"
                    android:textSize="@dimen/nav_textsize_large" />
                <!-- input source locked icon -->

                <ImageView
                    android:id="@+id/banner_simple_lock_icon"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:src="@drawable/nav_banner_lock_icon"
                    android:visibility="gone" />
            </RelativeLayout>

            <!-- third line of simple line -->

            <RelativeLayout
                android:id="@+id/banner_simple_third_line_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal"
                android:layout_weight="0.35" >

                <TextView android:id="@+id/banner_simple_cc"
                   android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/nav_textsize_normal"
                    android:visibility="gone"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:layout_toLeftOf="@id/banner_simple_third_middle"
                    android:layout_marginLeft="@dimen/nav_channel_list_item_padding"/>

                <TextView
                    android:id="@+id/banner_simple_third_middle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/dark_yellow"
                    android:textSize="@dimen/nav_textsize_normal"
                    android:layout_marginLeft="@dimen/nav_channel_list_item_padding"
                    android:layout_marginRight="@dimen/nav_channel_list_item_padding"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/banner_simple_type_time_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center" >
                        <TextView
                            android:id="@+id/banner_simple_receiver_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:textColor="@color/dark_yellow"
                            android:textSize="@dimen/nav_textsize_normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center" >
                        <TextView
                            android:id="@+id/banner_simple_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:textColor="@color/dark_yellow"
                            android:textSize="@dimen/nav_textsize_normal" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
    </LinearLayout>

  <RelativeLayout
    android:paddingTop="5dip"
    android:paddingBottom="5dip"
    android:id="@+id/basic_banner_all"
    android:layout_width="match_parent"
    android:layout_height="90dip"
    android:gravity="center_horizontal"
    android:background="@color/uk_banner_background"
    android:visibility="visible" >
              <!-- item one start -->
              <RelativeLayout
                   android:id="@+id/item_one"
                   android:layout_width="130dip"
                   android:layout_height="match_parent"
                   android:layout_marginLeft="@dimen/uk_banner_current_programme_common_margin_left"
                   android:orientation="vertical"
                   android:layout_alignParentLeft="true"
                   >
                  <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:gravity="center"
                       android:id="@+id/item_one_top"
                       android:layout_alignParentTop="true"
                       >
                      <TextView
                          android:id="@+id/banner_current_programme_number_text"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:gravity="center"
                          android:textColor="@color/white"
                          android:layout_centerVertical="true"
                          android:textSize="@dimen/uk_banner_current_programme_number_text_size"
                           />
                     <!-- favorite icon -->
                      <ImageView
                          android:id="@+id/banner_channel_favorite_icon"
                          android:layout_width="15dip"
                          android:layout_height="12dip"
                          android:src="@drawable/icon_favorite"
                          android:textColor="@color/white"
                          android:textSize="@dimen/nav_textsize_normal"
                          android:layout_marginLeft="2dip"
                          android:layout_gravity="center_vertical"
                          android:visibility="gone"
                          />
                      <ImageView
                           android:id="@+id/banner_current_programme_icon"
                           android:layout_width="40dip"
                           android:layout_height="24dip"
                           android:scaleType="fitXY"
                           android:layout_gravity="center_vertical"
                           android:visibility="invisible"
                           android:layout_marginLeft="2dip"
                           />
                  </LinearLayout>
                  <TextView
                    android:layout_below="@+id/item_one_top"
                    android:layout_above="@+id/detail_banner_category"
                    android:layout_marginTop="@dimen/uk_banner_item_margin_top"
                    android:layout_marginBottom="@dimen/uk_banner_item_margin_top"
                    android:id="@+id/banner_current_channel_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/white"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/uk_banner_current_programme_time_text_size"
                    />
                  <TextView
                      android:layout_alignParentBottom="true"
                      android:id="@+id/detail_banner_category"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textColor="@color/white"
                      android:textSize="@dimen/uk_banner_current_programme_second_name_text_size"
                      android:gravity="left"
                      android:lines="1"
                      android:ellipsize="end"
                      android:textStyle="bold"
                      />
               </RelativeLayout>
              <!-- item one end -->
              
              <!-- item two start -->
               <RelativeLayout
                   android:layout_toLeftOf="@+id/itme_three"
                   android:layout_toRightOf="@+id/item_one" 
                   android:id="@+id/itme_two"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_marginLeft="8dip"
                   android:orientation="vertical"
                   >
                   <TextView
                     android:id="@+id/banner_current_programme_first_name"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:gravity="left|center_vertical"
                     android:textColor="@color/white"
                     android:textSize="@dimen/uk_banner_current_programme_first_name_text_size"
                     android:fontFamily="light"
                     android:singleLine="true"
                     android:ellipsize="end"
                     android:textStyle="bold"
                     android:layout_alignParentTop="true"
                     android:layout_toRightOf="@+id/banner_channel_lock_icon"
                     />
                    <LinearLayout
                       android:layout_below="@+id/banner_current_programme_first_name"
                       android:layout_above="@+id/item_two_bottom"
                       android:layout_marginTop="@dimen/uk_banner_item_margin_top"
                       android:layout_marginBottom="2dip"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       >
                      <LinearLayout
                       android:layout_width="wrap_content"
                       android:gravity="center_vertical"
                       android:layout_height="wrap_content">
	                        <TextView
	                          android:id="@+id/banner_current_programme_second_name"
	                          android:layout_width="wrap_content"
	                          android:layout_height="wrap_content"
	                          android:gravity="left|center_vertical"
	                          android:layout_marginRight="6dp"
	                          android:textColor="@color/white"
	                          android:textSize="@dimen/uk_banner_current_programme_second_name_text_size"
	                          android:fontFamily="light"
	                          android:singleLine="true"
	                          android:ellipsize="end"/>
	                        <ImageView
		                        android:id="@+id/banner_channel_dolby_icon"
                              android:layout_marginTop="2dp"
		                        android:layout_width="@dimen/nav_banner_dobly_width"
		                        android:layout_height="@dimen/nav_banner_dobly_height"/>
                        <ImageView
                            android:layout_marginStart="5dp"
                            android:id="@+id/banner_channel_dolby_vision_icon"
                            android:layout_marginTop="2dp"
                            android:layout_width="@dimen/nav_banner_dobly_width"
                            android:layout_height="@dimen/nav_banner_dobly_height"/>
                       </LinearLayout>
                       <FrameLayout
                           android:layout_width="wrap_content"
		                       android:layout_height="match_parent">
                           <ProgressBar
                             android:layout_gravity="center_vertical"
	                           android:id="@+id/uk_banner_current_programme_duration_progress"
	                           android:layout_width="250dip"
	                           android:layout_height="@dimen/uk_banner_current_programme_progress_height"
	                           android:progress="0"
	                           android:max="100"
	                           style="@android:style/Widget.ProgressBar.Horizontal"/>
                       </FrameLayout>
                   </LinearLayout>

                  <TextView
                      android:id="@+id/banner_current_programme_label_guidance"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_marginLeft="5dip"
                      android:layout_marginRight="5dp"
                      android:background="@drawable/nav_uk_banner_view_label_stroke_bg"
                      android:layout_alignParentRight="true"
                      android:layout_alignParentBottom="true"
                      android:gravity="center"
                      android:paddingBottom="@dimen/uk_banner_label_padding_top_bottom"
                      android:paddingLeft="@dimen/uk_banner_label_padding_left_right"
                      android:paddingRight="@dimen/uk_banner_label_padding_left_right"
                      android:paddingTop="@dimen/uk_banner_label_padding_top_bottom"
                      android:text="Warning"
                      android:textColor="@color/white"
                      android:visibility="gone"
                      android:textSize="@dimen/uk_banner_current_programme_label_text_size" />

                   <LinearLayout
                       android:id="@+id/item_two_bottom"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:gravity="center_vertical"
                       android:layout_alignParentBottom="true"
                       >
                       <TextView
                         android:id="@+id/banner_current_programme_duration"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:gravity="left"
                         android:textColor="@color/white"
                         android:textSize="@dimen/uk_banner_current_programme_second_name_text_size"
                         android:fontFamily="light"
                         android:layout_gravity="center"
                         />
                        <TextView
                         android:layout_marginLeft="9dip"
                         android:id="@+id/banner_current_programme_total_min"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:gravity="left"
                         android:textColor="@color/white"
                         android:textSize="@dimen/uk_banner_current_programme_second_name_text_size"
                         android:fontFamily="light"
                         android:layout_gravity="center"
                         />
                       <TextView
                         android:layout_marginLeft="9dip"
                         android:id="@+id/banner_current_programme_label_subtitle"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:gravity="center"
                         android:text="S"
                         android:textSize="@dimen/uk_banner_current_programme_label_text_size"
                         android:textColor="@color/black"
                         android:background="@drawable/nav_uk_banner_view_label_solid_bg"
                         android:paddingLeft="@dimen/uk_banner_label_padding_left_right"
                         android:paddingRight="@dimen/uk_banner_label_padding_left_right"
                         android:paddingTop="@dimen/uk_banner_label_padding_top_bottom"
                         android:paddingBottom="@dimen/uk_banner_label_padding_top_bottom"
                         android:layout_gravity="center"
                         />
                        <!--ad-->
                       <TextView
                         android:layout_marginLeft="5dip"
                         android:id="@+id/banner_current_programme_label_visual_impaired"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:gravity="center"
                         android:textSize="@dimen/uk_banner_current_programme_label_text_size"
                         android:textColor="@color/black"
                         android:background="@drawable/nav_uk_banner_view_label_solid_bg"
                         android:paddingLeft="@dimen/uk_banner_label_padding_left_right"
                         android:paddingRight="@dimen/uk_banner_label_padding_left_right"
                         android:paddingTop="@dimen/uk_banner_label_padding_top_bottom"
                         android:paddingBottom="@dimen/uk_banner_label_padding_top_bottom"
                         android:layout_gravity="center"
                         android:visibility="gone"
                         />
                       <!--sl-->
                       <TextView
                           android:layout_marginLeft="5dip"
                           android:id="@+id/banner_current_programme_label_hearing_impaired"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:gravity="center"
                           android:textSize="@dimen/uk_banner_current_programme_label_text_size"
                           android:textColor="@color/black"
                           android:background="@drawable/nav_uk_banner_view_label_solid_bg"
                           android:paddingLeft="@dimen/uk_banner_label_padding_left_right"
                           android:paddingRight="@dimen/uk_banner_label_padding_left_right"
                           android:paddingTop="@dimen/uk_banner_label_padding_top_bottom"
                           android:paddingBottom="@dimen/uk_banner_label_padding_top_bottom"
                           android:layout_gravity="center"
                           android:visibility="gone"
                           />
                       
                      <TextView
                         android:layout_marginLeft="5dip"
                         android:id="@+id/banner_current_programme_label_rating"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:gravity="center"
                         android:textColor="@color/white"
                         android:textSize="@dimen/uk_banner_current_programme_label_text_size"
                         android:paddingLeft="@dimen/uk_banner_label_padding_left_right"
                         android:paddingRight="@dimen/uk_banner_label_padding_left_right"
                         android:paddingTop="@dimen/uk_banner_label_padding_top_bottom"
                         android:paddingBottom="@dimen/uk_banner_label_padding_top_bottom"
                         android:background="@drawable/nav_uk_banner_view_label_stroke_bg"
                         android:layout_gravity="center"
                         /> 
                      
                   </LinearLayout>
                <RelativeLayout 
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/lock_icon_all"
                    android:background="#68000000"
                    android:visibility="invisible"
                    ></RelativeLayout>
                <ImageView
                        android:layout_marginTop="3dip"
                        android:id="@+id/banner_channel_lock_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/nav_banner_lock_icon"
                        android:layout_alignParentTop="true"
                        android:visibility="gone"
                         />
                </RelativeLayout>
                <!-- item two end -->
                
                <!-- item three start -->
                <RelativeLayout
                   android:layout_toLeftOf="@+id/itme_four"
                   android:id="@+id/itme_three"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="@dimen/uk_banner_current_programme_common_margin_left"
                   android:orientation="vertical"
                   >
                    <RelativeLayout
                           android:layout_width="70dip"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal"
                           android:layout_alignParentTop="true"
                           android:layout_centerHorizontal="true"
                          >
                         <ImageView
                             android:id="@+id/banner_current_programme_indication"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:src="@drawable/icon_next_programme"
                             />
                         <TextView
                            android:layout_toRightOf="@+id/banner_current_programme_indication"
                            android:id="@+id/banner_current_programme_indication_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Next"
                            android:textColor="@color/white"
                            android:layout_marginLeft="3dip"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/uk_banner_current_programme_time_text_size"
                            />
                     </RelativeLayout> 
                     <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal"
                           android:layout_alignParentBottom="true"
                          >
                         <ImageView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:src="@drawable/icon_play_logo"
                             />
                         <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Mini Guide"
                            android:textColor="@color/white"
                            android:layout_marginLeft="5dip"
                            android:textSize="@dimen/uk_banner_current_programme_time_text_size"
                            />
                     </LinearLayout> 
                </RelativeLayout>
                <!-- item three end -->
                
                <!-- item four start -->
                <RelativeLayout
                   android:layout_alignParentRight="true"
                   android:id="@+id/itme_four"
                   android:layout_width="110dip"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="@dimen/uk_banner_current_programme_common_margin_left"
                   android:gravity="right"
                   >
                   <ImageView
                     android:id="@+id/banner_current_programme_logo_one"
                     android:layout_width="88dip"
                     android:layout_height="24dip"
                     android:src="@drawable/ic_freeview_play"
                     android:layout_alignParentRight="true"
                     />
                    <TextView
                      android:layout_alignParentRight="true"
                      android:layout_below="@+id/banner_current_programme_logo_one" 
                      android:layout_above="@+id/item_four_bottom"
                      android:id="@+id/banner_current_programme_current_time"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:gravity="right|center_vertical"
                      android:textColor="@color/white"
                      android:textSize="@dimen/uk_banner_current_programme_second_name_text_size"
                      />
                     <LinearLayout
                           android:id="@+id/item_four_bottom"
                           android:layout_alignParentBottom="true"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal"
                           android:layout_alignParentRight="true"
                          >
                         <ImageView
                             android:id="@+id/banner_current_programme_info"
                             android:layout_width="13dip"
                             android:layout_height="13dip"
                             android:src="@drawable/icon_programme_info"
                             />
                         <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Programme Info"
                            android:textColor="@color/white"
                            android:layout_marginLeft="5dip"
                            android:textSize="@dimen/uk_banner_current_programme_time_text_size"
                            />
                     </LinearLayout>
                </RelativeLayout>
                <!-- item four end -->
             <TextView
                 android:layout_marginLeft="8dip"
                 android:id="@+id/banner_special_info"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="@color/white"
                 android:textSize="@dimen/nav_textsize_large"
                 android:visibility="gone"
                 android:layout_centerInParent="true"
                 />
   </RelativeLayout>
</RelativeLayout>
