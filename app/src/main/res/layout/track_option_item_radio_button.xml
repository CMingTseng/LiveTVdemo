<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/option_item_height"
    android:background="?android:attr/selectableItemBackground"
    android:focusable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/side_panel_padding"
    android:paddingRight="@dimen/side_panel_padding" >

    <RadioButton
        android:id="@+id/radio_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:button="@null"
        android:background="@drawable/sound_radio_button_item_selector"
        android:clickable="false"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="@dimen/option_item_height"
        android:layout_weight="1"
        android:focusable="false"
        android:fontFamily="@string/option_item_text_font"
        android:gravity="center_vertical"
        android:minHeight="@dimen/option_item_height"
        android:singleLine="true"
        android:textColor="@color/option_item_text_color"
        android:textSize="@dimen/option_item_text_size" />

    <FrameLayout
        android:layout_width="48dp"
        android:layout_height="24dp" >

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/icon_sps"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:src="@drawable/icon_audio_sps"
            android:visibility="gone" />

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/icon_ad_sps"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:src="@drawable/icon_audio_ad_sps"
            android:visibility="gone" />

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/icon_ad"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:src="@drawable/icon_audio_description"
            android:visibility="gone" />
    </FrameLayout>

    <ImageView
        android:id="@+id/icon_dobly_atoms"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:src="@drawable/icon_dolby_atmos_vertical_new"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/icon_dobly_audio"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:src="@drawable/icon_dolby_audio_vertical_new"
        android:visibility="gone" />

</LinearLayout>