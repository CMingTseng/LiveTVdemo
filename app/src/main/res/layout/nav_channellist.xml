<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nav_channellist"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/nav_channel_list_layout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <!-- android:visibility="gone" -->

    <LinearLayout
            android:id="@+id/nav_channel_list_title_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_channel_list_title_height"
            android:background="@color/nav_ch_list_title_back"
            android:orientation="vertical" >

          <TextView
                android:id="@+id/nav_channel_list_title"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:gravity="start"
                android:paddingLeft="@dimen/nav_channel_details_channel_info_padding"
                android:paddingTop="50dp"
                android:text="@string/nav_channel_list"
                android:textColor="@color/nav_channel_list_txt"
                android:ellipsize="marquee"
                android:textSize="@dimen/nav_channel_list_textsize_large"
                android:textStyle="bold"
                android:singleLine="true"/>
        </LinearLayout>


<!--         <TextView
            android:id="@+id/nav_channel_list_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_channel_list_title_height"
            android:background="@color/nav_ch_list_title_back"
            android:paddingStart="@dimen/nav_channel_title_padding"
            android:paddingTop="@dimen/nav_channel_title_padding_top"
            android:text="@string/nav_channel_list"
            android:textColor="@color/nav_channel_list_txt"
            android:textSize="@dimen/nav_channel_list_textsize_large"
            android:textStyle="bold" /> -->

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="0dp" >

            <ProgressBar
                android:id="@+id/nav_channel_list_progressbar"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:background="@color/nav_ch_list_view_back"
                android:paddingBottom="180dp"
                android:paddingTop="180dp" />

            <ListView
                android:id="@+id/nav_channel_listview"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:background="@color/nav_ch_list_view_back"
                android:choiceMode="singleChoice"
                android:divider="@drawable/translucent_background"
                android:ellipsize="end"
                android:listSelector="@drawable/nav_ch_list_selector"
                android:scrollbars="none"
                android:visibility="gone" >

                <requestFocus />
            </ListView>

            <ListView
                android:id="@+id/nav_channel_typeview"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:background="@color/nav_ch_list_view_back"
                android:choiceMode="singleChoice"
                android:divider="@drawable/translucent_background"
                android:ellipsize="end"
                android:listSelector="@drawable/nav_ch_list_selector"
                android:scrollbars="none"
                android:visibility="gone" >

                <requestFocus />
            </ListView>

            <ListView
                android:id="@+id/nav_channel_more"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:background="@color/nav_ch_list_view_back"
                android:choiceMode="singleChoice"
                android:divider="@drawable/translucent_background"
                android:ellipsize="end"
                android:listSelector="@drawable/nav_ch_list_selector"
                android:scrollbars="none"
                android:visibility="gone" >
                <requestFocus />
            </ListView>

            <ListView
                android:id="@+id/nav_channel_selection"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:background="@color/nav_ch_list_view_back"
                android:choiceMode="singleChoice"
                android:divider="@drawable/translucent_background"
                android:ellipsize="end"
                android:listSelector="@drawable/nav_ch_list_selector"
                android:scrollbars="none"
                android:visibility="gone" >
                <requestFocus />
            </ListView>

            <ListView
                android:id="@+id/nav_channel_satellitetypeview"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:background="@color/nav_ch_list_view_back"
                android:choiceMode="singleChoice"
                android:divider="@drawable/translucent_background"
                android:ellipsize="end"
                android:listSelector="@drawable/nav_ch_list_selector"
                android:scrollbars="none"
                android:visibility="gone" >

                <requestFocus />
            </ListView>
            <ListView
                android:id="@+id/nav_channel_fav_view"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:background="@color/nav_ch_list_view_back"
                android:choiceMode="singleChoice"
                android:divider="@drawable/translucent_background"
                android:ellipsize="end"
                android:listSelector="@drawable/nav_ch_list_selector"
                android:scrollbars="none"
                android:visibility="gone" >

                <requestFocus />
            </ListView>
            <ListView
                android:id="@+id/nav_channel_satellitetypesecondview"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:background="@color/nav_ch_list_view_back"
                android:choiceMode="singleChoice"
                android:divider="@drawable/translucent_background"
                android:ellipsize="end"
                android:listSelector="@drawable/nav_ch_list_selector"
                android:scrollbars="none"
                android:visibility="gone" >

                <requestFocus />
            </ListView>

            <ListView
                android:id="@+id/nav_channel_list_option"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:background="@color/nav_ch_list_view_back"
                android:choiceMode="singleChoice"
                android:divider="@drawable/translucent_background"
                android:ellipsize="end"
                android:listSelector="@drawable/nav_ch_list_selector"
                android:scrollbars="none"
                android:visibility="gone" >

                <requestFocus />
            </ListView>

            <ListView
                android:id="@+id/nav_channel_sort"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:background="@color/nav_ch_list_view_back"
                android:choiceMode="singleChoice"
                android:divider="@drawable/translucent_background"
                android:ellipsize="end"
                android:listSelector="@drawable/nav_ch_list_selector"
                android:scrollbars="none"
                android:visibility="gone" >

                <requestFocus />
            </ListView>
        </FrameLayout>

        <TableLayout
            android:id="@+id/nav_channel_list_tip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/nav_ch_list_view_back"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/nav_channel_list_item_padding"
            android:paddingLeft="@dimen/nav_channel_list_function_layout_padding"
            android:paddingRight="@dimen/nav_channel_list_function_layout_padding" >

            <TableRow
                android:id="@+id/nav_page_up_down"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content" 
                android:layout_marginBottom="@dimen/nav_channel_list_button_margin" 
                android:visibility="invisible" >

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"                    
                    android:src="@drawable/tk_cm_color_key_red" 
                    />

                <TextView
                    android:id="@+id/channel_nav_page_up"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/nav_favorite_list_marLeft"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="@string/nav_page_up"
                    android:textColor="@color/nav_channel_list_color_txt"
                    android:textSize="@dimen/nav_channel_list_textsize_timeduration" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:src="@drawable/tk_cm_color_key_green" />

                <TextView
                    android:id="@+id/channel_nav_page_down"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/nav_favorite_list_marLeft"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="@string/nav_page_down"
                    android:textColor="@color/nav_channel_list_color_txt"
                    android:textSize="@dimen/nav_channel_list_textsize_timeduration" />
            </TableRow>

            <TableRow
                android:id="@+id/nav_page_function"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/nav_channel_list_button_margin" 
                android:orientation="horizontal" 
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/channel_nav_select_list_icon"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:src="@drawable/tk_cm_color_key_yellow" />

                <TextView
                    android:id="@+id/channel_nav_select_list"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/nav_favorite_list_marLeft"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="@string/nav_select_list"
                    android:textColor="@color/nav_channel_list_color_txt"
                    android:textSize="@dimen/nav_channel_list_textsize_timeduration" />

                <ImageView
                    android:id="@+id/channel_nav_exit_icon"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:src="@drawable/tk_cm_color_key_blue" />

                <TextView
                    android:id="@+id/channel_nav_exit"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/nav_favorite_list_marLeft"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="@string/nav_uk_channellist_add_fav"
                    android:textColor="@color/nav_channel_list_color_txt"
                    android:textSize="@dimen/nav_channel_list_textsize_timeduration" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nav_channel_details_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/nav_channel_list_detail_margin"
        android:layout_weight="8"
        android:background="@color/nav_ch_list_view_back"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/nav_channel_details_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.78"
            android:background="@color/nav_ch_list_title_back"
            android:gravity="center"
            android:text="@string/nav_channel_details"
            android:textColor="@color/nav_channel_list_color_txt"
            android:textSize="@dimen/nav_textsize_large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nav_channel_details_channel_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.12"
            android:gravity="top|left"
            android:paddingLeft="@dimen/nav_channel_details_channel_info_padding"
            android:paddingRight="@dimen/nav_channel_details_channel_info_padding"
            android:text="@string/nav_channel_infoNoChannelDetail"
            android:textColor="@color/nav_channel_list_color_txt"
            android:textSize="@dimen/nav_textsize_normal" />
    </LinearLayout>

</LinearLayout>
