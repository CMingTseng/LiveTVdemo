<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/f_child_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/Canvas.Scan.Text.Middle"
        android:layout_marginStart="70dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/region_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="80dip"
            android:layout_marginTop="20dip"
            android:layout_marginRight="80dip"
            android:listSelector="@drawable/scan_condition_background" />

        <TextView
            android:id="@+id/finish_tip"
            style="@style/Canvas.Scan.Text.Middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/dvr_12_dp"
            android:layout_marginBottom="40dp"
            android:text="@string/dvbs_region_select_finish_tip"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>
