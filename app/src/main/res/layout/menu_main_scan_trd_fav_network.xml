<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/tv_dialog_bg" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/scan_fav_network_str"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text="@string/scan_trd_fav_network"
            android:textSize="@dimen/left_marge_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <com.mediatek.wwtv.tvcenter.commonview.CustListView
            android:id="@+id/scan_fav_network_list"
            style="@style/setup_textView"
            android:layout_weight="0.4"
            android:dividerHeight="@dimen/nav_channel_list_padTop"
            android:listSelector="@drawable/setup_list_bg"
            android:nextFocusLeft="@+id/scan_fav_network_list"
            android:nextFocusRight="@+id/scan_fav_network_list"
            android:nextFocusUp="@+id/scan_fav_network_list"
            android:nextFocusDown="@+id/scan_fav_network_list"
            android:nextFocusForward="@+id/scan_fav_network_list"
             >
        </com.mediatek.wwtv.tvcenter.commonview.CustListView>
    </LinearLayout>

</LinearLayout>