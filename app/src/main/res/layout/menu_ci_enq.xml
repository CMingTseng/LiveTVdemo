<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pin_code_dialog"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_centerVertical="true"
    android:gravity="center"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/menu_ci_enq_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_tv_pwd_padding"
        android:gravity="start|center_vertical"
        android:textColor="@color/white"
        android:textSize="@dimen/middle_text_size"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/menu_ci_enq_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_pwd_margin_Letf"
        android:focusable="false"
        android:gravity="start|center_vertical"
        android:paddingBottom="@dimen/nav_channel_details_channel_info_padding"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="@dimen/nav_channel_details_channel_info_padding"
        android:textSize="@dimen/middle_text_size" />

    <TextView
        android:id="@+id/menu_ci_enq_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:gravity="start|center_vertical"
        android:paddingBottom="@dimen/nav_channel_details_channel_info_padding"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="@dimen/nav_channel_details_channel_info_padding"
        android:textSize="@dimen/middle_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pin_code_dialog_text_view_height"
        android:background="@color/nav_ch_list_view_back"
        android:orientation="vertical" >
        <fragment
            android:id="@+id/ci_input_pin_code"
            android:name="com.mediatek.wwtv.tvcenter.nav.view.ciview.PinDialogFragment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center" /> 
            
    </LinearLayout>

</LinearLayout>
