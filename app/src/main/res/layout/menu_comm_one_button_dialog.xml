<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/turnkey_comm_dialog"
    android:layout_width="460dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/menu_main_draw_pad" >

    <TextView
        android:id="@+id/comm_dialog_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/left_marge_size" />

    <Button
        android:id="@+id/comm_dialog_buttonNo"
        android:layout_width="@dimen/menu_button_width"
        android:layout_height="@dimen/menu_seekbar_thumb_height"
        android:layout_weight="1"
        android:background="@drawable/menu_dialog_button"
        android:text="@string/menu_ok"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        android:textSize="@dimen/left_marge_size" />

</LinearLayout>
