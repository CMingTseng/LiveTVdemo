<?xml version="1.0" encoding="utf-8"?>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/nav_epg_filter"
		android:gravity="center" android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:focusable="false"
		android:background="@drawable/transparent_background">
		<LinearLayout android:layout_width="match_parent"
			android:orientation="vertical" 
			android:layout_height="match_parent"
			android:layout_weight="1" >
			<TextView android:id="@+id/nav_epg_book_list_title" 
			    android:focusable="false"
				android:layout_width="match_parent" 
				android:layout_height="match_parent"
				android:text="@string/nav_epg_book_list" 
				android:textColor="@color/white"
				android:layout_weight="0.88" 
				android:gravity="center"
				android:textSize="@dimen/epg_type_main_ts" 
				android:background="@color/nav_ch_list_title_back"/>
			<ListView android:id="@+id/nav_epg_book_list"
				android:layout_height="match_parent" 
				android:layout_width="match_parent"
				android:focusable="true"
				android:layout_weight="0.12" 
				android:listSelector="@drawable/nav_epg_type_selector" 
				android:background="@color/nav_ch_list_view_back"/>
		</LinearLayout>
	</LinearLayout>

