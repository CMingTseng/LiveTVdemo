<?xml version="1.0" encoding="utf-8"?>
	<LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
	    xmlns:android="http://schemas.android.com/apk/res/android">
		
		<TextView 
		    android:id="@+id/common_channelview_text_num"
			android:layout_width="match_parent" 
			android:layout_height="match_parent"
			android:layout_weight="1" 
			android:textColor="@color/white"
			android:gravity="center_vertical|left" />
		
		<TextView 
		    android:id="@+id/common_channelview_text_type"
			android:layout_width="match_parent" 
			android:layout_height="match_parent"
			android:layout_weight="1" 
			android:textColor="@color/white"
			android:gravity="center_vertical|left" />
		
		<TextView 
		    android:id="@+id/common_channelview_text_freq"
			android:layout_width="match_parent" 
			android:layout_height="match_parent"
			android:layout_weight="1" 
			android:textColor="@color/white"
			android:gravity="center_vertical|left" />
		
		<TextView 
		    android:id="@+id/common_channelview_text_system"
			android:layout_width="match_parent" 
			android:layout_height="match_parent"
			android:layout_weight="1" 
			android:textColor="@color/white"
			android:gravity="center_vertical|left"/>
		
		<TextView 
		    android:id="@+id/common_channelview_text_name"
			android:layout_width="match_parent" 
			android:layout_height="match_parent"
			android:layout_weight="1" 
		    android:scrollHorizontally="true"
		    android:singleLine="true"
		    android:ellipsize="marquee"
			android:textColor="@color/white"
			android:gravity="center_vertical|left" />
		
		<ImageView 
		    android:id="@+id/common_channelview_pic_skip"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:layout_gravity="center_vertical"
			android:src="@drawable/poweron_channel_normal"/>
		
		<CheckBox 
			    android:id="@+id/channel_info_check"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_gravity="center_vertical"/>
	</LinearLayout>
